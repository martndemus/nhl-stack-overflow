@{
    ViewBag.Title = "Beheer overview - Question Jam";
    if (Request.Headers["X-PJAX"] == null) {
        Layout = "~/Views/Layouts/_User.cshtml";
        ViewBag.TitleTag = null;
    } else {
        ViewBag.TitleTag = "{{" + ViewBag.Title + "}}";
        Layout = null;
    } 
}

<h2>Beheer</h2>
@if (ViewBag.Allowed)
{
    <h3>Geflaggde vragen:</h3>
    if (ViewBag.badQuestionList != null)
    {
        <ul>
        @foreach (var vraagje in ViewBag.badQuestionList)
        {
            <li>@Html.ActionLink((string)vraagje.Title, "view", "vraag", new { id = vraagje.QuestionID }, new { target = "_blank" }):@vraagje.Content
            <br /><b>Options:</b> delete, edit</li>
        }
        </ul>
    }
    else
    {
        <span>Er zijn geen geflaggde vragen</span>   
    }
    <hr />
    <h3>Geflaggde antwoorden:</h3>
    if (ViewBag.badAwnserList != null)
    {
        <ul>
        @foreach (var awnser in ViewBag.badAwnserList)
        {
            <li>@awnser.Content</li>
        }
        </ul>
    }
    else 
    {
        <span>Er zijn geen geflaggde antwoorden.</span>   
    }
    <hr />
    <h3>Geflaggde comments:</h3>
    if (ViewBag.badCommentList != null)
    {
        <ul>
        @foreach (var comment in ViewBag.badCommentList)
        {
            <li>@comment.Content<br /><b>Options:</b> @Html.ActionLink("delete", "delete", "comment", new { id = comment.CommentID }, ""), edit<!-- add delete button :< --></li>
            
        }
        </ul>
    }
    else
    {
        <span>Er zijn geen geflaggde comments.</span>   
    }
    <hr />
}
else
{
    <span>Je hebt nog niet de rechten behaald om hier iets te doen.</span>
}