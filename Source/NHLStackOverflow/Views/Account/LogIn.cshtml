@model NHLStackOverflow.Models.User

@{
    Layout = "~/Views/Layouts/_Login.cshtml";
    ViewBag.Title = "Log hier in - Question Jam";
}

<h2>Log hier in</h2>



@using (Html.BeginForm())
{
    <div class="form">
            @Html.TextBoxFor(m => m.UserName, new { placeholder="Gebruikersnaam" })
            @Html.PasswordFor(m => m.Password, new { placeholder="Wachtwoord" })
            <input type="submit" value="Log in" id="loginsubmit">
                @Html.ValidationSummary(true, "Login failed")
            
    </div>
}