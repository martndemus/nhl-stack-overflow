<!DOCTYPE html>
<!--[if lte IE 8]><html class="no-js oldie" lang=en> <![endif]-->
<!--[if gt IE 8]><!--><html class=no-js lang=en><!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
        <meta name=viewport content="width=device-width">

        <title>@ViewBag.Title</title>

        <link href="@Href("~/Styles/style.css")" rel="stylesheet">

        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon">

        <script src="@Href("~/Scripts/modernizr.js")" type="text/javascript"></script>
    </head>
    <body>

        @Html.Partial("_NavPartial")

        <header id="logo">
            <h1>Question Jam</h1>
        </header>
        <div id="l-main">
            <section id="l-content">
                <section class="content">
                    @RenderBody()
                </section>
            </section>
            <section id="l-sidebar">
                <div class="widget user-widget">
                    <h3>Hallo @User.Identity.Name</h3>
                    
                    <img class="avater">

                    <ul class="stats right">
                        <li><img src="Styles/check.png" alt="Stemmen">123
                        <li><img src="Styles/aplus.png" alt="Antwoorden">18
                        <li><img src="Styles/seen.png" alt="Bekeken">2
                    </ul>
                    
                    <ul>
                        <li>2 nieuwe berichten
                        <li>8 nieuwe reacties
                        <li>1 nieuw antwoord
                    </ul>

                </div>
                <div class="widget">
                    <h3>Populaire Tags</h3>
                    @Html.Partial("_TagsPartial")                
                </div>
            </section>
        </div>

        <footer id="l-footer">
            &copy; 2012 Eddie Sprietsma, Marten Schilstra, Mathijs Jonker
        </footer>
                
        <script src="@Href("~/Scripts/script.js")" type="text/javascript"></script>
    </body>
</html>