<!DOCTYPE html>
<!--[if lte IE 8]><html class="no-js oldie" lang=en> <![endif]-->
<!--[if gt IE 8]><!--><html class=no-js lang=en><!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
        <meta name=viewport content="width=device-width">

        <title>@ViewBag.Title</title>

        <link href="@Href("~/Styles/style.css")" rel="stylesheet">

        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon">

        <script src="@Href("~/Scripts/modernizr.js")" type="text/javascript"></script>
    </head>
    <body>
        <div class="l-nav desktop">
            <nav>
                <ul>
                    <li><a href="#">Home</a>
                    <li><a href="#">Vraag</a>
                    <li><a href="#">Tags</a>
                </ul>

                <ul class="right">
                    <li><input id="search" placeholder="Zoek">
                    <li>@Html.Partial("_LogInPartial")
                </ul>
            </nav>
        </div>
        <div class="l-nav mobile">
            <nav>
                <ul>
                    <li><a class="active" href="#">Home</a>
                    <li><a href="#">Vraag</a>
                    <li><a href="#">Tags</a>
                    <li><input id="search" placeholder="Zoek">
                    <li>@Html.Partial("_LogInPartial")
                </ul>
            </nav>
        </div>

        <header id="logo">
            <h1>Question Jam</h1>
        </header>
        <div id="l-main">
            <section id="l-content">
                <section class="content">
                    @RenderBody()
                </section>
            </section>
            <section id="l-sidebar">
                <div class="widget user-widget">
                    <h3>Hallo @User.Identity.Name</h3>
                    
                    <img class="avater">

                    <ul class="stats right">
                        <li><img src="Styles/check.png" alt="Stemmen">123
                        <li><img src="Styles/aplus.png" alt="Antwoorden">18
                        <li><img src="Styles/seen.png" alt="Bekeken">2
                    </ul>
                    
                    <ul>
                        <li>2 nieuwe berichten
                        <li>8 nieuwe reacties
                        <li>1 nieuw antwoord
                    </ul>

                </div>
                <div class="widget">
                    <h3>Populaire Tags</h3>
                    <ul class="tags">
                        <li><a href="#222">Ruby</a> x 23.123
                        <li><a href="#222">JavaScript</a> x 16.165
                        <li><a href="#222">C#</a> x 11.342
                        <li><a href="#222">ASP.NET</a> x 9.345
                        <li><a href="#222">Scala</a> x 3.673
                        <li><a href="#222">Objective-C</a> x 3.176
                        <li><a href="#222">Rust</a> x 2.835
                        <li><a href="#222">OOP</a> x 938
                    </ul>
                </div>
            </section>
        </div>

        <footer id="l-footer">
            &copy; 2012 Eddie Sprietsma, Marten Schilstra, Mathijs Jonker
        </footer>
                
        <script src="@Href("~/Scripts/script.js")" type="text/javascript"></script>
    </body>
</html>